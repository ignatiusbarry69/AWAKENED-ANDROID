<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF6332</item>
        <item name="colorPrimaryVariant">#FD4308</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#96A5FA</item>
        <item name="colorSecondaryVariant">#ECDB4D</item>
        <item name="colorOnSecondary">#373636</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextItem.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#474646</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="UserAvatar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>